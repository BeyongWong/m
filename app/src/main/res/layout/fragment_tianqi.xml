<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@mipmap/biz_news_local_weather_bg_big"
    android:layout_height="match_parent">
<RelativeLayout
    android:id="@+id/jintian"
    android:layout_marginTop="20dp"
    android:layout_width="match_parent"
    android:layout_height="150dp">
    <TextView
        android:id="@+id/tianqiTv"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginBottom="10dp"
        android:textColor="#fff"
        android:text="北京 10日星期四"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/tianqiIv"
        android:layout_below="@+id/tianqiTv"
        android:src="@mipmap/biz_plugin_weather_baoxue"
        android:layout_width="50dp"
        android:layout_alignLeft="@+id/tianqiTv"
android:layout_marginLeft="-30dp"
        android:layout_height="50dp" />
    <LinearLayout
        android:layout_alignTop="@id/tianqiIv"
        android:layout_toRightOf="@id/tianqiIv"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/wenduTv"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_marginBottom="10dp"
            android:textColor="#fff"
            android:text="北京 10日星期四"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/fengxiangtv"
            android:gravity="center"
            android:textSize="16sp"
            android:layout_marginBottom="10dp"
            android:textColor="#fff"
            android:text="北京 10日星期四\n小于"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler"
       android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"></android.support.v7.widget.RecyclerView>
</LinearLayout>